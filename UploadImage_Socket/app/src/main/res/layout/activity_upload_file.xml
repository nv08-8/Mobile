<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".UploadFileActivity">

    <ImageView
        android:id="@+id/imgMultipart"
        android:layout_width="287dp"
        android:layout_height="275dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:contentDescription="avatar large"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_circle" />

    <!-- keep small imgChoose so existing code's findViewById won't fail; hide it -->
    <ImageView
        android:id="@+id/imgChoose"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone" />

    <!-- keep the username input and returned username view but hide them (used by code) -->
    <EditText
        android:id="@+id/editUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:hint="Username" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnChoose"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/button_red"
        android:text="CHá»ŒN FILE"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/button_red"
        android:text="UPLOAD IMAGES"
        android:textAllCaps="true"
        android:textColor="#FFFFFF" />

</LinearLayout>
